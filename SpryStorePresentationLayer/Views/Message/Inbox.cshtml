@model List<Message>

@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Gelen Kutusu</h1>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Gönderen</th>
        <th>Konu</th>
        <th>Mesajı Gör</th>

    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.MessageID</td>
            <td>@x.SenderName</td>
            <td>@x.Subject</td>
            <td> <a href="#" class="btn btn-outline-dark">Mesajı Gör</a></td>

        </tr>
    }
</table>
<a href="#" class="btn btn-outline-dark">Yeni Mesaj</a>
