@model List<Contact>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>İletişim Sayfası Gelen Mesajlar</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Konu</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Mesajı Gör</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ContactID</td>
            <td>@x.NameSurname</td>
            <td>@x.Subject</td>
            <td>@(((DateTime)x.Date).ToString("dd-MMM-yyyy"))</td>
            <td><a href="#" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="#" class="btn btn-outline-dark">Mesajı gör</a></td>
        </tr>
    }
</table>