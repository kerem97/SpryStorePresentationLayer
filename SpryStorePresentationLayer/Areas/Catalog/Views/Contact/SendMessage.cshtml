@model Contact
<div class="col-md-12">
    <div class="section-heading">
        <h2>Send us a Message</h2>
    </div>
</div>
<div class="col-md-12">
    <div class="contact-form">
        <form method="post" asp-action="SendMessage" asp-controller="Contact" asp-area="Catalog">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <fieldset>
                        <input asp-for="NameSurname" type="text" class="form-control" placeholder="Full Name" required="">
                    </fieldset>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <fieldset>
                        <input asp-for="Mail" type="text" class="form-control" id="email" placeholder="E-Mail Address" required="">
                    </fieldset>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <fieldset>
                        <input asp-for="Subject" type="text" class="form-control" id="subject" placeholder="Subject" required="">
                    </fieldset>
                </div>
                <div class="col-lg-12">
                    <fieldset>
                        <textarea asp-for="MessageContent" rows="6" class="form-control" id="message" placeholder="Your Message" required=""></textarea>
                    </fieldset>
                </div>
                <div class="col-lg-12">
                    <fieldset>
                        <button type="submit" id="form-submit" class="filled-button">Gönder</button>
                    </fieldset>
                </div>
            </div>
        </form>
    </div>
</div>